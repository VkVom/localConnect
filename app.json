{
  "expo": {
    "name": "LocalConnect",
    "slug": "LocalConnect",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "jsEngine": "hermes",

    "scheme": "localconnect",

    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.localconnect.app"
    },

    "android": {
      "package": "com.localconnect.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,

      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "INTERNET",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],

      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },

      "intentFilters": [
        {
          "action": "android.intent.action.VIEW",
          "data": [
            {
              "scheme": "geo"
            }
          ],
          "category": [
            "android.intent.category.DEFAULT",
            "android.intent.category.BROWSABLE"
          ]
        },
        {
          "action": "android.intent.action.SEND",
          "data": [
            {
              "mimeType": "text/plain"
            }
          ],
          "category": [
            "android.intent.category.DEFAULT"
          ]
        }
      ],

      "config": {
        "googleMaps": {
          "apiKey": "2f764610a593ec67cef07781d1004a95717295dc"
        }
      }
    },

    "web": {
      "favicon": "./assets/favicon.png"
    },

    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission":
            "Allow LocalConnect to use your location to find nearby shops."
        }
      ]
    ],

    "extra": {
      "eas": {
        "projectId": "d549055d-bb5f-4e9e-a325-37df2e6cc89f"
      },
      "MAPTILER_KEY": "Pgf9L8n8GrmAIeaUA5fp",
      "DEMAND_API_URL": "https://demandai-api.onrender.com",
      "EXPO_PUBLIC_GEMINI_KEY": "AIzaSyC-dyZJXWtpor3ieMy8pPWnd4ZHMFMOmsk"
    }
  }
}
